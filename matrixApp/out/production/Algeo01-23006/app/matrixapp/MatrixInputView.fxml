<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*>
<?import javafx.scene.layout.*>

<VBox alignment="CENTER" spacing="20" styleClass="home" stylesheets="@/app/matrixapp/css/home.css""
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="app.matrixapp.MatrixInputController">
    <HBox alignment="CENTER" spacing="10">
        <Label text="Matrix dimension:" styleClass="subtitle"/>
        <Spinner fx:id="rowSpinner" editable="true">
            <valueFactory>
                <SpinnerValueFactory.IntegerSpinnerValueFactory min="1" max="10" initialValue="4"/>
            </valueFactory>
        </Spinner>
        <Label text="x" styleClass="subtitle"/>
        <Spinner fx:id="colSpinner" editable="true">
            <valueFactory>
                <SpinnerValueFactory.IntegerSpinnerValueFactory min="1" max="10" initialValue="4"/>
            </valueFactory>
        </Spinner>
    </HBox>
    <Button text="Set matrix" onAction="#onSetMatrixClicked" styleClass="button"/>
</VBox>